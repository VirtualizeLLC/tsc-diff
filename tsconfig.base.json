{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "NodeNext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vllc/tsc-diff": ["packages/tsc-diff/src/index.ts"],
      "@vllc/eslint-tsc-diff": ["packages/eslint-tsc-diff/src/index.ts"],
      "@vllc/typescript-utils/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
