{
  "name": "@vllc/typescript-utils",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Frederick Engelhardt",
  "owner": "VirtualizeLLC",
  "contributors": [
    "Frederick Engelhardt"
  ],
  "scripts": {},
  "private": false,
  "engines": {
    "node": ">=20.0"
  },
  "keywords": [
    "typescript",
    "git diff",
    "eslint",
    "lint-staged",
    "jest"
  ],
  "bugs": {
    "url": "https://github.com/VirtualizeLLC/typescript-staged/issues"
  },
  "homepage": "https://github.com/VirtualizeLLC/typescript-staged#readme",
  "dependencies": {
    "commander": "^11.0.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nx/eslint-plugin": "16.5.5",
    "@nx/jest": "16.5.5",
    "@nx/js": "16.5.5",
    "@nx/linter": "16.5.5",
    "@nx/workspace": "16.5.5",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^6.0.0",
    "jest": "^29.6.2",
    "jest-environment-node": "^29.4.1",
    "lint-staged": "^13.2.3",
    "nx": "16.5.5",
    "prettier": "^3.0.0",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
