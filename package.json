{
  "name": "@vllc/tscd",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Frederick Engelhardt",
  "owner": "VirtualizeLLC",
  "contributors": [
    "Frederick Engelhardt"
  ],
  "scripts": {
    "build:prod": "nx run tsc-diff:build",
    "run:eslint-cli": "ts-node -r tsconfig-paths/register ./packages/eslint-tsc-diff/src/cli.ts --upstream",
    "build": "pnpm i; nx run-many -t build-resolve-paths;",
    "run:cli": "npx ts-node ./packages/@tsc-diff/eslint/src/cli.ts",
    "watch-server": "nodemon --watch 'packages/**/*' -e ts,tsx --exec pnpm run rebuild",
    "prepare": "husky install"
  },
  "private": false,
  "engines": {
    "node": ">=20.0"
  },
  "keywords": [
    "typescript",
    "git diff",
    "eslint",
    "lint-staged",
    "jest"
  ],
  "bugs": {
    "url": "https://github.com/VirtualizeLLC/typescript-utils/issues"
  },
  "homepage": "https://github.com/VirtualizeLLC/typescript-utils#README",
  "dependencies": {
    "@tsc-diff/core": "link:packages/tsc-diff-core",
    "@tsc-diff/eslint": "link:packages/tsc-diff-eslint",
    "axios": "^1.0.0",
    "commander": "^11.0.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nx/esbuild": "16.6.0",
    "@nx/eslint-plugin": "16.5.5",
    "@nx/jest": "16.6.0",
    "@nx/js": "16.6.0",
    "@nx/linter": "16.5.5",
    "@nx/node": "^16.6.0",
    "@nx/workspace": "16.5.5",
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@types/eslint": "^8.44.1",
    "@types/jest": "^29.5.3",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "conventional-changelog-conventionalcommits": "^6.1.0",
    "esbuild": "^0.17.17",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.6.2",
    "jest-environment-node": "^29.4.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "nx": "16.5.5",
    "prettier": "^3.0.0",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.1.3",
    "verdaccio": "^5.0.4",
    "yaml": "^2.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "nx": {
    "includedScripts": []
  }
}
